<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Blazer/Coat"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <RadioGroup
            android:id="@+id/radiogrp_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/radio_new_stich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/purple_500"
                android:text="New Stitiching" />

            <RadioButton
                android:id="@+id/radio_Alternation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/purple_500"
                android:text="ALternation" />
        </RadioGroup>


        <TextView
            android:id="@+id/btn_add_measurement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_button_black"
            android:drawableRight="@drawable/ic_baseline_mode_edit_24"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Add Measurement"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_pocket_Pleats"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Select Pocket,Pleats etc"
            android:background="@drawable/rounded_edit_text"/>


        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_edit_text"
            android:hint="price"
            android:textSize="@dimen/_11ssp"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp" />


        <EditText
            android:id="@+id/et_trial_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Trial Date"
            android:inputType="number"
            android:textSize="@dimen/_11ssp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_baseline_calendar_month_24"/>


        <EditText
            android:id="@+id/et_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Delivery Date"
            android:inputType="number"
            android:textSize="@dimen/_11ssp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_baseline_calendar_month_24"/>


        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Urgent"
            android:layout_marginTop="@dimen/_15sdp"
            android:thumbTint="@color/purple_500"
            android:textSize="@dimen/_12ssp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloth Images"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"/>

